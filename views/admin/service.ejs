<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@300&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/admin/css/style.css">
</head>

<body>
  <%- include('../../partials/admin/header.ejs')%>
    <section id="mid">
      <div class="container">
        <div class="row">
          <%- include('../../partials/admin/left.ejs')%>
            <div class="col-md-9">
              <h2>Service Management</h2>
              <table class="table table-dark table-striped mt-3">
                <tr>
                  <td>Total services: <%=totalService%></td>
                  <td>Publish: <%=publishCount%></td>
                  <td>Unpublish: <%=unpublishCount%></td>
                </tr>
              </table>
              <a href="/admin/serviceadd"><button class="btn btn-info form-control mt-3">Service Add Here</button></a>
              <table class="table table-dark table-striped mt-3">
                <tr>
                  <th>S.No</th>
                  <th>Service Name</th>
                  <th>Service Image</th>
                  <th>Service Description</th>
                  <th>Long Description</th>
                  <th>Posted Date</th>
                  <th>Service Status</th>                 
                  <th>Action</th>
                </tr>

                <%record.forEach((result,key)=>{%>
                  <tr>
                    <td><%=key+1%></td>
                    <td><%=result.name%></td>
                    <td><img src="/upload/<%=result.img%>" alt="" style="width: 60px;"></td>
                    <td><%=result.desc%> </td>
                    <td><%=result.ldesc%>
                      <td><%=result.postedDate%></td>
                      <%if(result.status=='publish'){%>
                    <td><a href="/admin/servicestatusupdate/<%=result.id%>"><button class="btn btn-outline-success"><%=result.status%></button></a></td>
                    <%}else{%>
                      <td><a href="/admin/servicestatusupdate/<%=result.id%>"><button class="btn btn-outline-danger"><%=result.status%></button></a></td>
                      <%}%>
                    </td><td><a href="/admin/servicedelete/<%=result.id%>"><i class="bi bi-x"></i></a></td>
                    <%})%>
                    <%if(record.length==0){%>
                    <tr><td colspan="8"><h4 style="text-align: center;">No Record Found</h4></td></tr>
                    <%}%>
              </table>

            </div>
        </div>
      </div>
    </section>
    <%- include('../../partials/admin/footer.ejs')%>
</body>

</html>